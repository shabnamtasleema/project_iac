pipeline {
    agent any
    stages {
        stage('terraform-validate') {
            steps {
                terraform init
                terraform validate
            }
        }
        stage('terraform-plan') {
            steps {
                echo 'terraform planning'
            }
        }
        stage('terraform-apply') {
            steps {
                echo 'terraform apply stage'
            }
        }
        stage('release') {
            steps {
                echo 'terraform releasing the latest'
            }
        }
        
    }
}